<div class="chat-container">
  <%= render 'sidebar' %>
  <div class="chat-window">
    <%= render 'header' %>
    <div class="chat-window__messages"
          data-controller="chat">
      <% @messages.group_by(&:day).each do |day, messages| %>
        <%= render 'divider', day: day %>
        <%= render messages %>
      <% end %>
    </div>
    <div class="chat-window__form">
      <%= form_for [@chat, @message] do |f| %>
        <div class="message-form">
          <%= f.text_field :body, placeholder: "Type message", autofocus: true, class: "message-form__input" %>
          <%#= f.submit "Send", class: "message-form__submit" %>
          <%= button_tag(class: 'message-form__submit') do %>
            <%= icon('far', 'paper-plane') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>